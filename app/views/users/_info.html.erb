<table class="table">
  <tr>
  <%= image_tag user.image.variant(resize:'300x300') %>
  </tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user.followings.count, user_followings_path(user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tr>
</table>

 <div class="row mt-3">
  <%= link_to "", edit_user_path(user.id), class:"btn btn-outline-dark col-12 fas fa-user-cog" %>
 </div>