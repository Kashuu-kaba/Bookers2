<table class="table">
  <tr>
  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg"%>
  </tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user.followings.count, book_path(user) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, book_path(user) %></th>
  </tr>
</table>

 <div class="row mt-3">
  <%= link_to "", edit_user_path(user.id), class:"btn btn-outline-dark col-12 fas fa-user-cog" %>
 </div>