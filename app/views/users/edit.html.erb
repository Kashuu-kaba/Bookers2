<div class="container mt-4 ">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5  mt-4 mx-auto">
        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f|%>

        <% if @user.errors.any? %>
          <h3>
            <%= @user.errors.count %>error occured
          </h3>
          <% @user.errors.full_messages.each do |message| %>
            <ul>
              <li>
                <%= message %>
              </li>
            </ul>
          <% end %>
        <% end %>

          <div class="form-group">
            <label class="inputimage">Name</label>
            <%= f.text_field :name, autofocus:true, type:"name",class:"form-control",id:"inputName"%>
          </div>

          <div class="form-group">
            <label class="inputImage">ProfileImage</label>
            <%= f.attachment_field :profile_image, type:"file", class:"form-control-file",placeholder: "プロフィール画像" %>
          </div>

          <div class="form-group">
            <label class="inputimage">Introduction</label>
            <%= f.text_area :introduction, class:"form-control introduction",id:"inputName" %>
          </div>

            <%= f.submit "Update User", class:"btn btn-secondary btn-sm"%>
        <% end %>
        </div>
      </div>
    </div>