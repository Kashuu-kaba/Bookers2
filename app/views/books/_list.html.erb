<div class="col-md-3 ">
      <h2>User info</h2>
          <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg"%>
          <table class="table">
            <tbody>
              <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
            </tbody>
          </table>

    
          <div class="row mt-3">
            <%= link_to "", edit_user_path(user.id), class:"btn btn-outline-dark col-12 fas fa-user-cog" %>
          </div>

    

          <div class="row">
            <div class="col-12">
              <h2 class="mt-3">New book</h2>

              <%= form_with model:@book, url: books_path, method: :post, local:true do |f| %>

              <% if @book.errors.any? %>
                  <%= @book.errors.count %>件のエラーが発生しました。
                <% @book.errors.full_messages.each do |message| %>
                  <ul>
                    <li>
                      <%= message %>
                    </li>
                  </ul>
                <% end %>
              <% end %>

                 <div class="field pb-3">
                  <%= f.label :title %><br />
                  <%= f.text_field :title, autocomplete: 'off', autofocus: true, class:"col-12 form-control"%>
                </div>
                 <div class="field pb-3">
                  <%= f.label :body %><br />
                  <%= f.text_area :body, autocomplete: 'off', autofocus: true, class:"col-12 form-control"%>
                </div>
                 <div class="actions pb-3">
                  <%= f.submit "Create Book", class:"btn btn-success btn-sm" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>