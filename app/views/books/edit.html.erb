<div class="container mt-4 ">
  <div class="row">
    <div class="col-6 mt-4 mx-auto">
      <h2>Editing Book</h2>

      <% if @book.errors.any? %>
          <h3>
            <%= @book.errors.count %>error occured.
          </h3>
          <% @book.errors.full_messages.each do |message| %>
            <ul>
              <li>
                <%= message %>
              </li>
            </ul>
          <% end %>
        <% end %>

       <%= form_with model:@book, local:true do |f| %>
            <div class="field pb-3">
                <%= f.label :title %><br />
                <%= f.text_field :title, autofocus: true, class:"col-12"%>
            </div>
            <div class="field pb-3">
                <%= f.label :body %><br />
                <%= f.text_area :body, autofocus: true, class:"col-12"%>
            </div>
            <div class="actions pb-3">
                <%= f.submit "Update Book", class:"btn btn-success" %>
            </div>
        <% end %>
        <%= link_to "Show",book_path(@book.id) %>|<%= link_to "Back",books_path %>
    </div>
  </div>
</div>
